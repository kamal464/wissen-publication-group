generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Journal {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  issn        String?   @unique
  shortcode   String?   @unique
  coverImage  String?
  publisher   String?
  accessType  String?
  subjectArea String?
  category    String?
  discipline  String?
  impactFactor String?
  
  // Content Management Fields
  aimsScope   String?   @db.Text
  guidelines  String?   @db.Text
  editorialBoard String? @db.Text
  homePageContent String? @db.Text
  currentIssueContent String? @db.Text
  archiveContent String? @db.Text
  articlesInPress String? @db.Text
  
  // Meta Information
  metaTitle   String?
  metaDescription String? @db.Text
  metaKeywords String?
  doi         String?
  indexing    String?   @db.Text
  
  // Image Fields
  bannerImage String?
  flyerImage  String?
  flyerPdf    String?
  googleIndexingImage String?
  
  // Additional Journal Information
  journalImpactFactor String?
  articleProcessingCharge String?
  icv String?
  pubmedId String?
  indexingAbstracting String? @db.Text
  email String?
  classification String?
  citationsValue String?
  acceptanceRate String?
  conferenceUrl String?
  
  // Homepage Specific Fields
  editorName String?
  editorAffiliation String? @db.Text
  editorImage String?
  impactFactorValue String?
  citationsPercentage String?
  acceptancePercentage String?
  googleAnalyticsTitle String?
  googleAnalyticsValue String?
  googleAnalyticsUrl String?
  articleFormats String? @db.Text
  journalDescription String? @db.Text
  pubmedArticles String? @db.Text
  
  articles       Article[]
  boardMembers   BoardMember[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Article {
  id            Int      @id @default(autoincrement())
  title         String
  abstract      String   @db.Text
  keywords      String?
  authors       Author[]
  journal       Journal  @relation(fields: [journalId], references: [id])
  journalId     Int
  status        String   @default("PENDING") // PENDING, UNDER_REVIEW, ACCEPTED, PUBLISHED, INPRESS, CURRENT_ISSUE
  pdfUrl        String?
  wordUrl       String?
  articleType   String?  // Review Article, Case Report, Research Article, etc.
  submittedAt   DateTime @default(now())
  publishedAt   DateTime?
  // Submission details (from author info)
  submitterName    String?
  submitterEmail   String?
  submitterAddress String?
  submitterCountry String?
  // Volume and Issue Management
  volumeNo     String?   // Volume number (e.g., "7", "6")
  issueNo      String?   // Issue number (e.g., "9", "1")
  issueMonth   String?   // Issue month (e.g., "January", "February")
  year         String?   // Publication year (e.g., "2025", "2024")
  specialIssue String?   // Special issue or conference title
  issueId      Int?      // Issue ID reference (can be removed when moving to months)
  // Articles in Press Management
  showInInpressCards Boolean @default(false) // Controls visibility in In-Press cards view
  inPressMonth       String?  // Month for In-Press calendar filtering (e.g., "January", "February")
  inPressYear        String?  // Year for In-Press calendar filtering (e.g., "2025", "2024")
  // Additional publication details
  firstPageNumber String?
  lastPageNumber  String?
  doi             String?
  correspondingAuthorDetails String? @db.Text
  citeAs          String? @db.Text
  country         String?
  receivedAt      DateTime?
  acceptedAt      DateTime?
  // Fulltext content
  fulltextImages  String? @db.Text // JSON array of image paths
  heading1Title   String?
  heading1Content String? @db.Text
  heading2Title   String?
  heading2Content String? @db.Text
  heading3Title   String?
  heading3Content String? @db.Text
  heading4Title   String?
  heading4Content String? @db.Text
  heading5Title   String?
  heading5Content String? @db.Text
  // Test column to verify schema sync
  schemaSyncTest  String? // Test column - can be removed after verification
}

model Author {
  id        Int       @id @default(autoincrement())
  name      String
  email     String
  affiliation String?
  articles  Article[]
  createdAt DateTime  @default(now())
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String
  message   String   @db.Text
  status    String   @default("PENDING") // PENDING, RESPONDED
  createdAt DateTime @default(now())
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  link      String?
  isPinned  Boolean  @default(false)
  publishedAt DateTime? 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id            Int      @id @default(autoincrement())
  userName      String   @unique
  password      String?  // Optional password field
  journalShort  String?
  journalName   String?
  category      String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model JournalShortcode {
  id          Int      @id @default(autoincrement())
  shortcode   String   @unique
  journalName String
  journalId   Int?     // Optional reference to Journal
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model WebPage {
  id            Int      @id @default(autoincrement())
  pageName      String
  pageUrl       String   @unique
  pageImage     String?
  seoTitle      String?
  seoDescription String? @db.Text
  seoKeywords   String?
  bannerImage   String?
  pageDescription String? @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model BoardMember {
  id                Int      @id @default(autoincrement())
  name              String
  position          String
  memberType        String?  // Editor-in-Chief, Associate Editor, etc.
  editorType        String?  // Academic, Clinical, Industry, Other
  affiliation       String?
  journalId         Int?
  journal           Journal? @relation(fields: [journalId], references: [id])
  email             String?
  bio               String?  @db.Text
  description       String?  @db.Text  // Editor Description
  biography         String?  @db.Text  // Editor Biography
  imageUrl          String?
  profileUrl        String?  // EB Profile URL
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  message   String   @db.Text
  type      String   @default("info") // info, warning, success, error
  isRead    Boolean  @default(false)
  userId    Int?     // Optional - for user-specific notifications
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
